{
    "name": "noiselabs/smarty-bundle",
    "type": "symfony-bundle",
    "description": "This Symfony2 bundle provides integration for the Smarty3 template engine.",
    "keywords": ["templating", "smarty", "symfony", "noiselabs"],
    "homepage": "http://smartybundle.noiselabs.org",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Vítor Brandão",
            "email": "vitor@noiselabs.io",
            "homepage": "https://noiselabs.io"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/noiselabs/SmartyBundle/contributors"
        }
    ],
    "support": {
        "docs": "https://smartybundle.readthedocs.io/en/latest/",
        "forum": "https://gitter.im/noiselabs/SmartyBundle",
        "irc": "irc://irc.freenode.org/noiselabs",
        "issues": "https://github.com/noiselabs/SmartyBundle/issues"
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=5.5.9",
        "ext-intl": "*",
        "ext-simplexml": "*",
        "symfony/framework-bundle": "^2.8|^3.0|^4.0",
        "symfony/templating": "^2.8|^3.0|^4.0",
        "smarty/smarty": "^3.1"
    },
    "require-dev": {
        "mopa/bootstrap-bundle": "~3.0",
        "phpunit/phpunit": ">=5.4",
        "symfony/asset": "^2.8|^3.0|^4.0",
        "symfony/expression-language": "^2.8|^3.0|^4.0",
        "symfony/phpunit-bridge": "~3.0|~4.0",
        "symfony/security": "^2.8|^3.0|^4.0",
        "symfony/security-acl": "^2.8|^3.0|^4.0",
        "symfony/translation": "^2.8|^3.0|^4.0",
        "symfony/yaml": "^2.8|^3.0|^4.0"
    },
    "suggest": {
        "mopa/bootstrap-bundle": "Integration of Twitter Bootstrap into Symfony2",
        "mopa/bootstrap-sandbox-bundle": "Integration of Twitter Bootstrap into Symfony2 (extra)",
        "liip/theme-bundle": "Integration of Twitter Bootstrap into Symfony2 (themes)",
        "knplabs/knp-menu-bundle": "Smarty3 integration with KnpMenu (object oriented menus)"
    },
    "autoload": {
        "psr-4": {
            "NoiseLabs\\Bundle\\SmartyBundle\\": ""
        }
    },
    "autoload-dev": {
        "files": [
            "autoload/phpunit-class-aliases.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --coverage-text"
    }
}
